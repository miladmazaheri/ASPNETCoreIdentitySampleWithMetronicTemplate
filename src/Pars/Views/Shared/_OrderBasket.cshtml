@model List<Pars.Entities.OrderBasket>
<div class="dropdown">
    <div class="topbar-item"
         data-toggle="dropdown"
         data-offset="10px,0px">
        <div class="
                        btn
                        btn-icon
                        btn-hover-transparent-white
                        btn-dropdown
                        btn-lg
                        mr-1
                      ">
            <span class="svg-icon svg-icon-xl">
                @if (@Model.Count > 0)
                {
                    @Model.Count
                }
                <svg xmlns="http://www.w3.org/2000/svg"
                     xmlns:xlink="http://www.w3.org/1999/xlink"
                     width="24px"
                     height="24px"
                     viewBox="0 0 24 24"
                     version="1.1">
                    <g stroke="none"
                       stroke-width="1"
                       fill="none"
                       fill-rule="evenodd">
                        <rect x="0" y="0" width="24" height="24" />
                        <path d="M12,4.56204994 L7.76822128,9.6401844 C7.4146572,10.0644613 6.7840925,10.1217854 6.3598156,9.76822128 C5.9355387,9.4146572 5.87821464,8.7840925 6.23177872,8.3598156 L11.2317787,2.3598156 C11.6315738,1.88006147 12.3684262,1.88006147 12.7682213,2.3598156 L17.7682213,8.3598156 C18.1217854,8.7840925 18.0644613,9.4146572 17.6401844,9.76822128 C17.2159075,10.1217854 16.5853428,10.0644613 16.2317787,9.6401844 L12,4.56204994 Z"
                              fill="#000000"
                              fill-rule="nonzero"
                              opacity="0.3" />
                        <path d="M3.5,9 L20.5,9 C21.0522847,9 21.5,9.44771525 21.5,10 C21.5,10.132026 21.4738562,10.2627452 21.4230769,10.3846154 L17.7692308,19.1538462 C17.3034221,20.271787 16.2111026,21 15,21 L9,21 C7.78889745,21 6.6965779,20.271787 6.23076923,19.1538462 L2.57692308,10.3846154 C2.36450587,9.87481408 2.60558331,9.28934029 3.11538462,9.07692308 C3.23725479,9.02614384 3.36797398,9 3.5,9 Z M12,17 C13.1045695,17 14,16.1045695 14,15 C14,13.8954305 13.1045695,13 12,13 C10.8954305,13 10,13.8954305 10,15 C10,16.1045695 10.8954305,17 12,17 Z"
                              fill="#000000" />
                    </g>
                </svg>
            </span>
        </div>
    </div>
    <div class="dropdown-menu p-0 m-0 dropdown-menu-right dropdown-menu-xl dropdown-menu-anim-up">
        <form>
            <div class="d-flex align-items-center py-10 px-8 bgi-size-cover bgi-no-repeat rounded-top" style="background-image: url(metronic/assets/media/misc/bg-1.jpg);">
                <span class="btn btn-md btn-icon bg-white-o-15 mr-4">
                    <i class="flaticon2-shopping-cart-1 text-success"></i>
                </span>
                <h4 class="text-white m-0 flex-grow-1 mr-3">
                    سبد سفارش من
                </h4>
                <button type="button" class="btn btn-success btn-sm">
                    @(Model.Count) مورد
                </button>
            </div>
            <div class="scroll scroll-push" data-scroll="true" data-height="250" data-mobile-height="200">
                @if (!Model.Any())
                {
                    <div class="d-flex align-items-center justify-content-between p-8">
                        <h4>سبد سفارش خالی است</h4>
                    </div>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="d-flex align-items-center justify-content-between p-8">
                            <div class="d-flex flex-column mr-2">
                                <a href="@Url.Action("Detail","Product",new{id=item.ProductId})" target="_blank" class="font-weight-bold text-dark-75 font-size-lg text-hover-primary">@item.Name</a>
                                <span class="text-muted">@item.CreationDate.ToFriendlyPersianDateTextify()</span>
                                <div class="d-flex align-items-center mt-2">
                                    <span class="font-weight-bold mr-1 text-dark-75 font-size-lg">@item.Price.ToString("N0") ریال</span>
                                    <span class="text-muted mr-1"> </span>
                                    <button type="button" class="btn btn-xs btn-light-success btn-icon mr-2" onclick="decreaseBasketItem(@item.ProductId)"><i class="ki ki-minus icon-xs"></i></button>
                                    <span class="font-weight-bold mr-2 text-dark-75 font-size-lg">@item.Count</span>
                                    <button type="button" class="btn btn-xs btn-light-success btn-icon" onclick="increaseBasketItem(@item.ProductId)"><i class="ki ki-plus icon-xs"></i></button>
                                </div>
                            </div>
                            <a href="#" class="symbol symbol-70 flex-shrink-0">
                                @if (!string.IsNullOrWhiteSpace(item.PictureAddress))
                                {
                                    <img src="@item.PictureAddress" onerror="this.src = '/metronic/assets/media/products/product.svg'" style="width: 50px; height: 50px;">
                                }
                                else
                                {
                                    <img src="~/metronic/assets/media/products/product.svg" style="width: 50px; height: 50px;">
                                }
                            </a>
                        </div>
                        <div class="separator separator-solid"></div>
                    }
                }
            </div>
            <div class="p-8">
                @if (Model.Any())
                {
                    <div class="d-flex align-items-center justify-content-between mb-7">
                        <span class="font-weight-bold text-muted font-size-sm mr-2">جمع</span>
                        <span class="font-weight-bolder text-primary text-right">@Model.Select(x => x.Price).DefaultIfEmpty(0).Sum().ToString("N0")</span>
                    </div>
                }
                <div class="text-right">
                    @if (!Model.Any())
                    {
                        <a href="@Url.Action("Index","Product")" class="btn btn-success text-weight-bold">
                            مشاهده لیست محصولات
                        </a>
                    }
                    else
                    {
                        <a type="button" class="btn btn-primary text-weight-bold" asp-controller="OrderBasket" asp-action="Index">
                            مشاهده و ثبت سفارش
                        </a>
                        <button type="button" class="btn btn-warning text-weight-bold" onclick="clearBasket()">
                            حذف همه
                        </button>
                    }

                </div>
            </div>
        </form>
    </div>
</div>