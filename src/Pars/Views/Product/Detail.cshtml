@model ProductViewModel
<div class="row mb-5">
    <div class="col-md-6 col-sm-12 rounded">
        @if (!string.IsNullOrWhiteSpace(Model.Picture))
        {
            <img src="@Model.Picture" onerror="this.src = '/images/product.jpg'" class="img-fluid rounded center-block" >
        }
        else
        {
            <img src="~/images/product.jpg" class="img-fluid rounded center-block"  >
        }
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="card card-custom" style="height: 100%">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        <b>@Model.Name</b>
                        <small>@Model.CategoryName</small>
                    </h3>
                </div>
                <div class="card-header-right mt-4 mt-xs-2">
                    <button class="btn btn-sm btn-success" type="button" onclick="increaseBasketItem(@Model.Id)">
                        <span class="svg-icon svg-icon-xl">
                            <!--begin::Svg Icon | path:assets/media/svg/icons/Shopping/Cart3.svg--><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <rect x="0" y="0" width="18" height="18"></rect>
                                    <path d="M12,4.56204994 L7.76822128,9.6401844 C7.4146572,10.0644613 6.7840925,10.1217854 6.3598156,9.76822128 C5.9355387,9.4146572 5.87821464,8.7840925 6.23177872,8.3598156 L11.2317787,2.3598156 C11.6315738,1.88006147 12.3684262,1.88006147 12.7682213,2.3598156 L17.7682213,8.3598156 C18.1217854,8.7840925 18.0644613,9.4146572 17.6401844,9.76822128 C17.2159075,10.1217854 16.5853428,10.0644613 16.2317787,9.6401844 L12,4.56204994 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                                    <path d="M3.5,9 L20.5,9 C21.0522847,9 21.5,9.44771525 21.5,10 C21.5,10.132026 21.4738562,10.2627452 21.4230769,10.3846154 L17.7692308,19.1538462 C17.3034221,20.271787 16.2111026,21 15,21 L9,21 C7.78889745,21 6.6965779,20.271787 6.23076923,19.1538462 L2.57692308,10.3846154 C2.36450587,9.87481408 2.60558331,9.28934029 3.11538462,9.07692308 C3.23725479,9.02614384 3.36797398,9 3.5,9 Z M12,17 C13.1045695,17 14,16.1045695 14,15 C14,13.8954305 13.1045695,13 12,13 C10.8954305,13 10,13.8954305 10,15 C10,16.1045695 10.8954305,17 12,17 Z" fill="#000000"></path>
                                </g>
                            </svg><!--end::Svg Icon-->
                        </span>
                        <span class="d-xs-none">افزودن به سبد سفارش</span>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <td class="text-weight-bold" style="width: 20%">
                                مواد اولیه
                            </td>
                            <td>
                                @Model.Material
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                کاربرد
                            </td>
                            <td>
                                @Model.Usage
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                انداره هر شاخه
                            </td>
                            <td>
                                @Model.BranchSize
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                رنگ
                            </td>
                            <td>
                                @Model.Color
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                ضخامت
                            </td>
                            <td>
                                @Model.Thickness
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                سایز
                            </td>
                            <td>
                                @Model.Size
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                تعداد در کارتن
                            </td>
                            <td>
                                @Model.CountInBox
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                وزن هر کارتن
                            </td>
                            <td>
                                @Model.BoxWeight
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                روش نصب
                            </td>
                            <td>
                                @Model.InstallationMethod
                            </td>
                        </tr>
                        <tr>
                            <td class="text-weight-bold">
                                خصوصیات
                            </td>
                            <td>
                                @Model.Specification
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-12">
        <div class="card card-custom">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        توضیحات
                    </h3>
                </div>
            </div>
            <div class="card-body">
                @Model.Description
            </div>
        </div>
    </div>
</div>