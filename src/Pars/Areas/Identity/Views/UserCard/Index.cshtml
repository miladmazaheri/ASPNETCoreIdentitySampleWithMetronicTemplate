@model UserCardItemViewModel

@{
    ViewData["Title"] = $"برگه مشخصات {Model.User.DisplayName}";
}

<partial name="_UserCardItem" model="Model" />

@section Scripts
{
    <script>
        new ClipboardJS('[data-clipboard=true]').on('success',
            function(e) {
                e.clearSelection();
                Swal.fire({
                    toast: true,
                    position: 'top',
                    icon: 'success',
                    title: 'کپی شد',
                    showConfirmButton: false,
                    timer: 1000
                });

            });

        function generateApiKey(userId) {
            $.get('@Url.Action("GenerateApiKey","UserCard")' +'?userId='+userId,
                function(data) {
                    $("#kt_clipboard_1").val(data);
                });
        }
    </script>
}
